{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Lukso Indexing Debug",
        "program": "${workspaceFolder}/apps/indexer/src/main.ts",
        "preLaunchTask": "tsc: build - tsconfig.json",
        "console": "integratedTerminal",
        "sourceMaps": true,
        "internalConsoleOptions": "neverOpen",
        "sourceMapPathOverrides": {
          "webpack:///./*": "${workspaceFolder}/*",
          "webpack:///src/*": "${workspaceFolder}/src/*",
          "webpack:///*": "*"
        },
        "skipFiles": [
          "${workspaceFolder}/node_modules/**/*.js",
          "<node_internals>/**"
        ],
        "outFiles": [
          "${workspaceFolder}/dist/apps/indexer/**/*.js"
        ],
        "env": {
          "NODE_ENV": "development"
        },
        "runtimeArgs": [
          "-r",
          "ts-node/register",
          "-r",
          "tsconfig-paths/register"  
        ],  
        "args": ["${workspaceFolder}/apps/indexer/src/main.ts"]
      }
    ]
  }