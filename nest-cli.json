{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/signer/src",
  "monorepo": true,
  "root": "apps",
  "compilerOptions": {
    "webpack": true,
    "watchAssets": true,
    "tsConfigPath": "tsconfig.json"
  },
  "projects": {
    "indexer": {
      "type": "application",
      "root": "apps/indexer",
      "entryFile": "main",
      "sourceRoot": "apps/indexer/src",
      "compilerOptions": {
        "tsConfigPath": "apps/indexer/tsconfig.app.json"
      }
    }
  }
}